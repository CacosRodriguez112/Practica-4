<Window x:Class="GestorProductosWPF.AgregarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorProductosWPF"
        mc:Ignorable="d"
        Title="AgregarProductoWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="51,28,0,0" TextWrapping="Wrap" Text="Id" VerticalAlignment="Top" Width="375" Height="34"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="51,93,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Width="375" Height="34"/>
        <TextBox x:Name="txtCodigoBarras" HorizontalAlignment="Left" Margin="51,151,0,0" TextWrapping="Wrap" Text="Codigo de barras" VerticalAlignment="Top" Width="375" Height="34"/>
        <TextBox x:Name="txtCategoria" HorizontalAlignment="Left" Margin="51,0,0,0" TextWrapping="Wrap" Text="Categoria" VerticalAlignment="Center" Width="375" Height="34"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Margin="51,254,0,0" TextWrapping="Wrap" Text="Precio" VerticalAlignment="Top" Width="375" Height="34"/>
        <TextBox x:Name="txtStock" HorizontalAlignment="Left" Margin="51,314,0,0" TextWrapping="Wrap" Text="Stock" VerticalAlignment="Top" Width="375" Height="34"/>
        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="509,183,0,0" VerticalAlignment="Top" Height="66" Width="201" Click="btnGuardar_Click"/>

    </Grid>
</Window>
