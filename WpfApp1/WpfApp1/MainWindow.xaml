<Window x:Class="GestorProductosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorProductosWPF"
        mc:Ignorable="d"
        Title="Gestor de Productos" Height="450" Width="800">




    <!-- Layout general -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        
        
        <TabControl>
            <TabItem Header="Buscar Producto">
                <!-- Panel superior -->
                <Border Background="White" CornerRadius="14" Padding="20" Margin="0 0 0 20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Controles de búsqueda -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                            <ComboBox x:Name="comboTipoBusqueda" Width="150"/>
                            <TextBox x:Name="txtBusqueda" Width="200"/>
                            <Button x:Name="btnBuscar" Content="Buscar" Width="120" Click="btnBuscar_Click"/>

                            <!-- Resultado -->
                            <TextBlock x:Name="txtResultadoBusqueda"
                           Margin="20 0 0 0" VerticalAlignment="Center"
                           FontWeight="Bold" FontSize="14"/>

                            <!-- Barra progreso -->
                            <ProgressBar x:Name="progressIteraciones" Width="150"
                             Margin="20 0 0 0" Height="12"/>
                        </StackPanel>

                        <!-- Imagen del producto encontrado -->
                        <Border Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="#F3F3F3"
                    CornerRadius="10"
                    Padding="10"
                    Margin="20 0 0 0">
                            <Image x:Name="imgProductoBuscado"
                       Width="160"
                       Height="160"
                       Stretch="Uniform"
                       Visibility="Visible"/>
                        </Border>

                    </Grid>
                </Border>
            </TabItem>





            <!-- DataGrid principal -->
            <TabItem Header="Buscar Producto">
                <Border Grid.Row="1" Background="White" CornerRadius="14" Padding="10">
                    <DataGrid x:Name="dataGridProductos" AutoGenerateColumns="True"/>
                </Border>
            </TabItem>

            <!-- Panel inferior: Ordenamiento + gráfico -->
            <TabItem Header="Ordenar y Graficar">
                <Border Grid.Row="2" Background="White" CornerRadius="14" Padding="15" Margin="0 20 0 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">

                            <TextBlock Text="Ordenar por:" Margin="5" FontWeight="Bold"/>

                            <ComboBox x:Name="comboCirterioOrden" Width="200"/>

                            <Button x:Name="btnOrdenar" Content="Ordenar" Width="200" Click="btnOrdenar_Click"/>

                            <Button x:Name="btnAgregar" Content="Agregar producto" Width="200"
                            Click="btnAgregar_Click"/>

                            <Button x:Name="btnEliminar" Content="Eliminar seleccionado" Width="200"
                            Click="btnEliminar_Click"/>

                            <ListView x:Name="listViewOrdenados" Margin="5" Height="120"/>
                        </StackPanel>

                        <!-- Zona de gráfico -->
                        <Canvas x:Name="canvasGrafico" Grid.Column="1"
                        Background="#EDF2F7"
                        Margin="10" Height="230">
                        </Canvas>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
