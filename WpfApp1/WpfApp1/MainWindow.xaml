<Window x:Class="GestorProductosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorProductosWPF"
        mc:Ignorable="d"
        Title="Gestor de Productos" Height="606" Width="976">

    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl BorderBrush="Silver" Background="White" Foreground="Silver">
            <TabItem Header="Buscar Producto" >
                <Border  Padding="25" Margin="10" Background="#FFF3F3F3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0 0 20 0">

                            <TextBlock Text="Buscar Producto" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="#4C4C4C"
                                       Margin="0 0 0 15"/>

                            <StackPanel Orientation="Horizontal">

                                <ComboBox x:Name="comboTipoBusqueda" 
                                            Width="150" Height="35"
                                            Padding="8"
                                            BorderBrush="#BFC3C8" 
                                            BorderThickness="1"
                                            Background="#F7F8FA"/>

                                <TextBox x:Name="txtBusqueda" 
                                           Width="200" Height="35"
                                           Padding="8"
                                           FontSize="14"
                                           Margin="10 0 10 0"
                                           Background="#F7F8FA"
                                           BorderBrush="#BFC3C8" 
                                           BorderThickness="1"/>

                                <Button x:Name="btnBuscar" 
                                          Content="Buscar" 
                                          Width="120" Height="35"
                                          Click="btnBuscar_Click" 
                                          Foreground="White"
                                          FontWeight="SemiBold"
                                          BorderThickness="0"
                                          Cursor="Hand" 
                                          Background="Green"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0 15 0 0">

                                <TextBlock Text="Resultado:" 
                                           FontWeight="Bold" FontSize="14"
                                           Margin="0 0 5 0"/>

                                <TextBlock x:Name="txtResultadoBusqueda"
                                             FontSize="14" 
                                             Foreground="Black"/>
                            </StackPanel>
                            <ProgressBar x:Name="progressIteraciones" 
                                           Width="250"
                                           Height="10"
                                           Margin="-20 10 0 0"
                                           Background="#E3E5EB"
                                           Foreground="Green"/>
                        </StackPanel>

                        <Border Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="Vista previa" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center"
                                           Margin="0 0 0 10"/>

                                <Image x:Name="imgProductoBuscado"
                                         Width="auto"
                                         Height="auto"
                                         Stretch="Uniform"
                                         Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>


            <TabItem Header="Listado de Productos">
                <Border Background="White" CornerRadius="18" Padding="15" Margin="10">
                    <StackPanel>
                        <DockPanel Margin="5 0 0 10">
                            <TextBlock Text="Lista de Productos"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#4C4C4C"
                                       DockPanel.Dock="Left"
                                       VerticalAlignment="Center"/>

                            <StackPanel Orientation="Horizontal"
                                        DockPanel.Dock="Right"
                                        HorizontalAlignment="Right">

                                <Button x:Name="btnAgregar"
                                        Content="Agregar producto"
                                        Width="150" Height="35"
                                        Background="#1AA260"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Margin="0 0 10 0"
                                        Click="btnAgregar_Click"/>

                                <Button x:Name="btnEliminar"
                                        Content="Eliminar seleccionado"
                                        Width="170" Height="35"
                                        Background="#E53935"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="btnEliminar_Click"/>
                            </StackPanel>
                        </DockPanel>

                        <Border Background="#F9FAFB"
                                CornerRadius="12"
                                Padding="10"
                                BorderBrush="#E0E3E7"
                                BorderThickness="1">
                            <DataGrid x:Name="dataGridProductos"
                                        AutoGenerateColumns="False"
                                        HeadersVisibility="Column"
                                        GridLinesVisibility="None"
                                        RowHeight="35"
                                        ColumnHeaderHeight="40"
                                        FontSize="14"
                                        AlternatingRowBackground="#F1F3F5"
                                        BorderThickness="0"
                                        HorizontalGridLinesBrush="#D9DCE0"
                                        VerticalGridLinesBrush="#D9DCE0" Background="{x:Null}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                                    <DataGridTextColumn Header="Código de Barras" Binding="{Binding CodigoBarras}" Width="150"/>
                                    <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" Width="120"/>
                                    <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat=C}" Width="100"/>
                                    <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80"/>
                                </DataGrid.Columns>

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FF3A00FF" Offset="0"/>
                                                    <GradientStop Color="#FF2000FF"/>
                                                    <GradientStop Color="White" Offset="1"/>
                                                    <GradientStop Color="#FF462BFF"/>
                                                    <GradientStop Color="#FF1F00FF"/>
                                                    <GradientStop Color="#FF8B7BFF" Offset="0.648"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Padding" Value="8"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="6"/>
                                        <Setter Property="Foreground" Value="#333"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E7F1FF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.CellStyle>
                            </DataGrid>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>


            <TabItem Header="Ordenar y Graficar">
                <Border Background="White" CornerRadius="18" Padding="20" Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#F7F8FA"
                                CornerRadius="14"
                                Padding="15"
                                BorderBrush="#E1E4E8"
                                BorderThickness="1"
                                Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,475,0">

                            <StackPanel>
                                <TextBlock Text="Opciones de Ordenamiento"
                                           FontWeight="Bold"
                                           FontSize="18"
                                           Margin="8 0 0 15"
                                           Foreground="#3A3A3A"/>

                                <TextBlock Text="Ordenar por:" 
                                           Margin="8 0 0 5"
                                           FontWeight="SemiBold"
                                           Foreground="#555" Width="339"/>

                                <ComboBox x:Name="comboCirterioOrden"
                                            Width="334" Height="35"
                                            Padding="5"
                                            Background="#FFFFFF"
                                            BorderBrush="#C7CCD3"
                                            BorderThickness="1"/>

                                <Button x:Name="btnOrdenar" 
                                          Content="Ordenar"
                                          Width="334" Height="38"
                                          Margin="0 12 0 0"
                                          Background="#4C6EF5"
                                          Foreground="White"
                                          BorderThickness="0"
                                          Click="btnOrdenar_Click"
                                          Cursor="Hand"
                                          FontWeight="SemiBold"/>

                                <TextBlock Text="Resultado:"
                                           FontWeight="Bold"
                                           Margin="8 10 0 3"
                                           Foreground="Black" Width="346"/>

                                <Border Background="White"
                                        Height="185"
                                        BorderBrush="#FFABADB3"
                                        BorderThickness="1"
                                        Padding="5" Width="341">
                                    <ListView x:Name="listViewOrdenados"
                                                FontSize="14"
                                                Foreground="#333"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1"
                                Background="#F4F6F9"
                                BorderBrush="#E1E4E8"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="15"
                                Margin="144,0,0,0" Height="424" VerticalAlignment="Top">

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Gráfico de Productos"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Margin="0 0 0 10"
                                           Foreground="#3A3A3A"/>

                                <Canvas x:Name="canvasGrafico"
                                          Background="#FFFFFF"
                                          Height="334"
                                          Margin="0 10 0 0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
